@using HomeSharedMVC.Helper
@model HomeSharedMVC.Models.WrapperHomePage

<!-- banner -->
<div class="container">
    <div class="properties-listing spacer">
        <a href="buysalerent.php" class="pull-right viewall">View All Listing</a>
        <h2>Les meilleurs échanges</h2>
        <div id="owl-example" class="owl-carousel">
            @foreach (HomeShareDAL.BienEchange currentBiens in Model.lstBiensMeilleursAvis)
            {
                Html.RenderPartial("_lstMeilleursBiens", currentBiens);
            }
        </div>
    </div>
    <div class="spacer">
        <div class="row">
            @Html.About()

            <div class="col-lg-5 col-lg-offset-1 col-sm-3 recommended">
                <h3>Les derniers biens en échange</h3>
                @foreach (HomeShareDAL.BienEchange currentBiens in Model.lstBiensDerniersEchange)
                {
                    Html.RenderPartial("_lstDerniersBiens", currentBiens);
                }
            </div>
        </div>
    </div>
</div>