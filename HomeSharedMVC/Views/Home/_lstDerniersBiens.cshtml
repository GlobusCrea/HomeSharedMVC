@model HomeShareDAL.BienEchange

<div class="item">
    <div class="row">
        <div class="col-lg-4"><img src="~/Content/images/properties/@Model.Photo" class="img-responsive" alt="properties" /></div>
        <div class="col-lg-8">
            <h5><a href="property-detail.php">@Model.titre</a></h5>
            @if (@Model.Assurance == true)
            {
                <p class="price">Assurance 10€/Jour</p>
            }
            else
            {
                <p class="price">Pas d'assurance supplémentaire</p>
            }
            <a href="property-detail.php" class="more">More Detail</a>
        </div>
    </div>
</div>